{
  "name": "smart-storage-manager-frontend",
  "version": "2.0.0",
  "description": "Smart Storage Manager - Modern React Frontend for Umbrel",
  "private": true,
  "type": "module",
  "homepage": ".",
  "license": "MIT",
  "author": {
    "name": "Umbrel Community Team",
    "email": "community@umbrel.com",
    "url": "https://github.com/Free-dts/smart-storage-manager"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Free-dts/smart-storage-manager.git",
    "directory": "app/frontend"
  },
  "bugs": {
    "url": "https://github.com/Free-dts/smart-storage-manager/issues"
  },
  "keywords": [
    "umbrel",
    "storage",
    "raid",
    "mergerfs",
    "snapraid",
    "react",
    "typescript",
    "dashboard",
    "monitoring"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "start": "vite",
    "eject": "vite build"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "react-query": "^5.52.1",
    "@tanstack/react-query": "^5.52.1",
    "react-hook-form": "^7.53.0",
    "@hookform/resolvers": "^3.9.0",
    "zod": "^3.23.8",
    "axios": "^1.7.7",
    "socket.io-client": "^4.7.5",
    "lucide-react": "^0.427.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-button": "^1.0.3",
    "@radix-ui/react-card": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-form": "^0.0.3",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-sheet": "^1.0.0",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-table": "^1.0.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "recharts": "^2.12.7",
    "date-fns": "^3.6.0",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.13.1",
    "framer-motion": "^11.3.31",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2",
    "class-variance-authority": "^0.7.0",
    "react-helmet-async": "^2.0.5",
    "react-error-boundary": "^4.0.13",
    "zustand": "^4.5.4",
    "immer": "^10.1.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/node": "^22.5.4",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.6",
    "vite-plugin-pwa": "^0.20.5",
    "vite-plugin-checker": "^0.7.2",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-unused-imports": "^4.1.0",
    "eslint-plugin-tailwindcss": "^0.6.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/user-event": "^14.5.2",
    "vitest": "^2.1.1",
    "jsdom": "^25.0.1",
    "@vitest/ui": "^2.1.1",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/coverage-istanbul": "^2.1.1",
    "jsdom-global": "^3.0.2",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.10",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/container-queries": "^0.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "sort-package-json": "^2.10.0",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite-tsconfig-paths": "^5.0.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "@types/jest": "^29.5.12",
    "@types/testing-library__jest-dom": "^5.14.9"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": "warn",
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "ignorePatterns": [
      "dist",
      "node_modules"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not safari < 12",
      "not firefox < 78",
      "not chrome < 70",
      "not edge < 79"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 edge version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "proxy": "http://localhost:8850",
  "build": {
    "outDir": "build",
    "assetsDir": "assets",
    "sourcemap": false,
    "minify": "esbuild",
    "chunkSizeWarningLimit": 1000,
    "rollupOptions": {
      "output": {
        "manualChunks": {
          "vendor": ["react", "react-dom"],
          "ui": ["@radix-ui/react-accordion", "@radix-ui/react-dialog", "@radix-ui/react-dropdown-menu"],
          "charts": ["recharts"],
          "utils": ["axios", "socket.io-client", "date-fns", "clsx"]
        }
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/test/setupTests.ts"],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/src/test/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/test/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "vitest": {
    "globals": true,
    "environment": "jsdom",
    "setupFiles": ["./src/test/setup.ts"],
    "coverage": {
      "reporter": ["text", "json", "html", "lcov"],
      "exclude": [
        "node_modules/",
        "src/test/",
        "src/**/*.d.ts",
        "dist/",
        "vite.config.ts",
        "vitest.config.ts"
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-tailwindcss"
    ],
    "rules": {
      "color-hex-case": "lower",
      "color-no-invalid-hex": true,
      "indentation": 2,
      "number-leading-zero": "never",
      "property-no-unknown": true,
      "selector-pseudo-element-no-unknown": true,
      "selector-type-no-unknown": true,
      "string-quotes": "double",
      "value-no-vendor-prefix": true
    },
    "ignoreFiles": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "lower-case"
      ],
      "subject-case": [
        2,
        "never",
        "sentence-case"
      ],
      "type-case": [
        2,
        "lower-case"
      ]
    }
  },
  "pwa": {
    "name": "Smart Storage Manager",
    "short_name": "StorageMgr",
    "description": "Intelligent storage management for Umbrel",
    "theme_color": "#000000",
    "background_color": "#ffffff",
    "display": "standalone",
    "scope": "/",
    "start_url": "/",
    "icons": [
      {
        "src": "icon-192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "icon-512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  }
}